extends layout.pug

block content
    h3= park.parkName
    div
        ul
            li= `Location: ${park.city}, ${park.provinceState} ${park.country}`
            li= `Opened: ${park.opened}`
            li= `Size: ${park.size}`
    div
        p #{park.description}
    div
        a(class='btn btn-primary mr-1' href=`/park/edit/${park.id}` role='button') Edit
        a(class= 'btn btn-danger mr-1' href=`/park/delete/${park.id}` role='button') Delete
        a(class='btn btn-warning' href=`/parks` role='button') Return to List
